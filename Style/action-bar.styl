@require "vars.styl"

.action-bar
  display: flex
  flex-direction: row
  flex-wrap: nowrap
  justify-content: space-between
  align-items: center
  align-content: stretch
  position: sticky
  bottom: 0
  background-color: white
  border-top: 1px solid color_gray_2
  font-size: font-size_m

  &__counter
    margin-left: 10px

  &__filter-buttons
    display: flex

  &__clear-button
    margin-right: 8px

.task-clear-completed
  font-size: font-size_m

.filter-buttons_item
  padding: 8px 0
  overflow: hidden

  & + &
    margin-left: 6px

.filter-buttons_input
  width: 30px
  height: 0
  margin-left: -30px

  &:checked + .filter-buttons_text
    border-color: color_gray_1

  &:focus + .filter-buttons_text
    border-color: color_gray_4

.filter-buttons_text
  padding: 2px 6px
  border: 1px transparent solid
  border-radius: 5px

